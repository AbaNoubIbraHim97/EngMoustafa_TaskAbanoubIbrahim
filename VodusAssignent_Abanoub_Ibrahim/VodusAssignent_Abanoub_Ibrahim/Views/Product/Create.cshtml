@using Product.Domain.Dtos;
@model AddProductDto
<a  class="nav-link text-primary" asp-area="" asp-controller="Product" asp-action="Index">Back</a>

<form asp-action="Create" method="post" id="add-product-form">

    <div class="form-group">
        <label for="Name"> Name</label>
        <input asp-for="Name" required  type="text" class="form-control" id="Name" placeholder="Enter product Name">
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label for="Description"> Description</label>
        <input asp-for="Description" required type="text" class="form-control" id="Description" placeholder="Enter product Description">
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label for="Email"> Email</label>
        <input asp-for="Email" type="email" required class="form-control" id="Email" placeholder="Enter product Email">
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label for="PhoneNumber"> PhoneNumber</label>
        <input asp-for="PhoneNumber" required type="text" class="form-control" id="PhoneNumber" placeholder="Enter product PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

    </div>



    <div class="form-group">
        <label for="Price"> Price</label>
        <input asp-for="Price" type="text" required class="form-control" id="Price" placeholder="Enter product Price">
        <span asp-validation-for="Price" class="text-danger"></span>

    </div>
   
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>

    </div>
</form>


@section Scripts {
    <script>
        $(function () {
            $('#add-product-form').submit(function (event) {
                event.preventDefault(); 
                var form = $(this);
                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: form.serialize(),
                    success: function (result) {                        
                            alert("Added successfully");
                    },
                    error: function () {
                        alert('Failed to add product.');
                    }
                });
            });
        });
    </script>
}
