@using Product.Domain.Dtos;
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@model IEnumerable<ProductDto>
<a class="nav-link text-primary" asp-area="" asp-controller="Product" asp-action="Create">Add Product</a>


<table class="table table-hover">
    <thead>
        <tr>

            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Email </th>
            <th scope="col">Phone</th>

            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>

                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Email</td>
                <td>@product.PhoneNumber</td>


                <td>

                    <div class="row">
                        <a class="nav-link  btn btn-warning col-3" asp-area="" asp-route-id="@product.Id" asp-controller="Product" asp-action="Edit">Update</a>  | 
                        <a class="nav-link btn btn-info   col-3" asp-area="" asp-route-id="@product.Id" asp-controller="Product" asp-action="Details">Details</a> | 
                        <a asp-action="Delete" class="nav-link btn btn-danger col-3" asp-route-id="@product.Id" data-toggle="modal" data-target="#deleteModal">Delete</a>
                    </div>
                </td>
            </tr>
            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this product?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                        </div>
                    </div>
                </div>
            </div>

        }


    </tbody>
</table>


